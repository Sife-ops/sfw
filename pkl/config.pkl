@go.Package { name = "sfw/gen/config" }
module sfw

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.5.3#/go.pkl"

///////////////////////////////////////////////////////////////////////////////
// definitions

abstract class Server {
    host: String
}

class Postgres extends Server {
    database: String
    username: String
    password: String
}

class Web extends Server {}
class Log extends Server {}
class Websocket extends Server {}

class Worldgen {
    ravine_proximity: Int
}

///////////////////////////////////////////////////////////////////////////////
// requirements

sfwip: String

postgres: Postgres
log: Log
web: Web
websocket: Websocket

worldgen: Worldgen